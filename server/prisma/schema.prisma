// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "debian-openssl-1.0.x"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id             String              @id
  first_name     String
  last_name      String
  middle_initial String?
  photoURL       String?
  password       String
  birth_date     DateTime            @db.Date
  ssn            String              @unique
  email          String?             @unique
  phone_number   String
  address        String
  city           String
  state          String
  zipcode        String
  work_name      String?
  work_address   String?
  work_city      String?
  work_state     String?
  work_zipcode   String?
  cna_number     String?             @unique
  cna_exp_date   DateTime?           @db.Date
  chha_number    String?             @unique
  chha_exp_date  DateTime?           @db.Date
  classes        RegisteredClasses[]
}

model Class {
  id       Int                 @id @default(autoincrement())
  topic    String
  date     ClassDate[]
  students RegisteredClasses[]
}

model RegisteredClasses {
  createdAt DateTime @default(now())
  studentId String
  student   Student  @relation(fields: [studentId], references: [id])
  class     Class    @relation(fields: [classId], references: [id])
  classId   Int
  platform  platform
  paid      Boolean

  @@id([studentId, classId])
  @@index([studentId, platform])
}

model ClassDate {
  id      Int      @id @default(autoincrement())
  date    DateTime @db.Date
  am_pm   AMPM
  Class   Class?   @relation(fields: [classId], references: [id])
  classId Int?
}

enum AMPM {
  AM
  PM
}

enum platform {
  Zoom
  Classroom
}
