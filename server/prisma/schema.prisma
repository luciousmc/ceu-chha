// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "debian-openssl-1.0.x"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id             Int                 @id @default(autoincrement())
  first_name     String
  last_name      String
  middle_initial String?
  photoURL       String?
  password       String
  birth_date     DateTime
  ssn            String              @unique
  email          String?             @unique
  phone_number   String
  address        String
  city           String
  state          String
  zipcode        String
  work_name      String?
  work_address   String?
  work_city      String?
  work_state     String?
  work_zipcode   String?
  cna_number     String?             @unique
  cna_exp_date   DateTime?
  chha_number    String?             @unique
  chha_exp_date  DateTime?
  classes        Class[]
  registered     RegisteredClasses[]
}

model Class {
  id                Int                 @id @default(autoincrement())
  topic             String
  date              ClassDate[]
  students          Student[]
  RegisteredClasses RegisteredClasses[]
}

model RegisteredClasses {
  id        Int     @id @default(autoincrement())
  studentId Int
  Student   Student @relation(fields: [studentId], references: [id])
  Class     Class   @relation(fields: [classId], references: [id])
  classId   Int
  platform  String
  paid      Boolean
}

model ClassDate {
  id      Int      @id @default(autoincrement())
  date    DateTime
  am_pm   AMPM
  Class   Class?   @relation(fields: [classId], references: [id])
  classId Int?
}

enum AMPM {
  AM
  PM
}
